<html>

  <body>

   <script language="javascript">

      var umaData, ano, mes, d, corfnt, corfdo;

         ano = parseInt(window.prompt("Qual ano?"));
         mes = parseInt(window.prompt("Qual mes?"));

          umaData = new Date();
          umaData.setDate(1);
          umaData.setMonth(mes-1);
          umaData.setFullYear(ano);

            document.write("<h1>" + umaData + "</h1>");
            document.write("<br>");
            document.write("<table border=3>");

            for(d=2; d<=30; ++d)
            {
                if (umaData.getDay()==0)
                {
                    corfdo="red";
                    corfnt="white";
                }
                else
                {
                    corfdo="white";
                    corfnt="red";
                }
        
            document.write("<tr bgcolor=" + corfdo + ">");
            document.write("<td width=200 align=center>");
            document.write("<font face=arial size=6 color=" + corfnt + ">" + 
                  
                   umaData.getDate() + "/" + 
                  (umaData.getMonth()+1) + "/" + 
                  umaData.getFullYear() + "</font>");

            document.write("</td>");
            document.write("<td width=100 align=center>");
            document.write("<font face=arial size=6 color=" + corfnt + ">");
   
            switch (umaData.getDay())
             {
                case 0: document.write("Dom"); break;
                case 1: document.write("Seg"); break;
                case 2: document.write("Ter"); break;
                case 3: document.write("Qua"); break;
                case 4: document.write("Qui"); break;
                case 5: document.write("Sex"); break;
                case 6: document.write("Sab"); break;
             }

            document.write("</font>");
            document.write("</td>");
            document.write("</tr>");

                umaData.setDate(d);

             }

      document.write("</table>");

    </script>

   </body>

</html>
